        <property name="ignoreResourceNotFound" value="true"/>
        <property name="properties" ref="be.gerard.general.web.properties"/>
    </validator>
    -->
    
    <!-- Properties -->
    <bean id="be.gerard.general.web.properties" class="be.gerard.common.bootstrap.CustomPropertiesFactoryBean">
        <property name="localOverride" value="true" />
        <property name="ignoreResourceNotFound" value="false" />
        <property name="locations">
            <list>
                <value>classpath:be.gerard.general.web.properties</value>
            </list>
        </property>
    </bean>
    
    <!-- Resource(s) -->
    <import resource="classpath:be.gerard.common.bootstrap.xml" />
    <import resource="classpath:be.general.util.remote.xml" />
    <import resource="classpath:be.gerard.common.logging.xml" />
    
    <!-- Scan -->
    <context:component-scan base-package="be.gerard.core.web.controller" />
    <context:component-scan base-package="be.gerard.common.web" />
    <context:component-scan base-package="be.gerard.core.interface_v1.util" />
    
    <!-- Spring Security -->
    <!--
    <security:http auto-config="true" use-expressions="true">
        <security:intercept-url pattern="/public/login.xhtml" access="permitAll"/>
