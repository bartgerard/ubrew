<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:context="http://www.springframework.org/schema/context"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-4.0.xsd
          http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context-4.0.xsd">

    <!-- Resource(s) -->
    <import resource="classpath:be.gerard.core.web.xml"/>

    <!-- Scan -->
    <context:component-scan base-package="be.gerard.common.logging"/>
    <context:component-scan base-package="be.gerard.common.bootstrap.config"/>
    <context:component-scan base-package="be.gerard.core.web.controller"/>
    <context:component-scan base-package="be.gerard.common.web"/>
    <context:component-scan base-package="be.gerard.core.interface_v1.util"/>
    <context:component-scan base-package="be.gerard.common.security"/>

</beans>
